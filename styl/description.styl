.main-description
  padding 6em 3em
  
  &__description-section-top
    border-bottom 3px solid #efefef
    padding-bottom 5em
    
      
  &__description-section-middle
    padding 2em 0 5em
    border-bottom 3px solid #efefef
    &__gallery-section
      margin: 0 0 2em 0;
      
      p
        font-size: 0.8em;
        line-height: 1.5em;
        margin: 0;
      &--gallery-link
        position relative
        display block
        margin-bottom 2em
        img 
          width 100%
          border-radius .3em
        &:hover
          &:before
            transition opacity 0.2s ease-in-out
            background rgba(0, 0, 0, 0.5)
            border-radius .3em
            content ''
            display block
            left 0
            opacity 0.5
            position absolute
            top 0
            width 100%
            height 99%
          &:after 
            transition opacity 0.2s ease-in-out
            border-radius .3em
            border 3px solid rgba(255, 255, 255, 0.5)
            color #fff
            content 'View'
            display block
            font-size 0.8em
            font-weight 400
            left 50%
            line-height 2.25em
            margin -1.25em 0 0 -3em
            padding 0 1.5em
            position absolute
            top 50%

 